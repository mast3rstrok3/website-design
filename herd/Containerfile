# Stage 1: base — install dependencies
FROM node:22-alpine AS base
WORKDIR /app
COPY package.json package-lock.json ./
RUN npm ci

# Stage 2: development — mount source, run vite dev server
FROM base AS development
COPY . .
EXPOSE 5175 24678
CMD ["npx", "vite", "dev", "--host", "0.0.0.0", "--port", "5175"]

# Stage 3: builder — build static assets
FROM base AS builder
COPY . .
RUN npx vite build

# Stage 4: production — serve with nginx
FROM docker.io/library/nginx:alpine AS production
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /app/dist /usr/share/nginx/html
EXPOSE 5175
CMD ["nginx", "-g", "daemon off;"]
